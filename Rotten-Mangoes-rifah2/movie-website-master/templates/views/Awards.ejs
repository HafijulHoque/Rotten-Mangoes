    <link rel="stylesheet" href="/css/award.css">

</head>
<body>
<div class="main-content">
    <div>
        <%- include('../partials/header.ejs') %>
    </div>

    <div class="d-flex flex-wrap justify-content-evenly">
        <% for(let i = 0;i < awards.length;i++){ %>
            <div class="card mb-1 m-1" style="width: 12rem;">
                <img class="card-img-top p-3" src=<%= awards[i].Picture %>
                alt="Card">
                <div class="card-body" style="display: flex;flex-direction: column;justify-content:space-between;">
                    <p style="color: #266dd3;font-weight: 650; font-size: 24px;" class="card-title"><%= awards[i].Award_name %></p>
                    <div>
                        <p><%= awards[i].Details %></p>
                    </div>
                </div>
            </div>
        <% } %>
        <br/>
    </div>

</div>

</body>
</html>