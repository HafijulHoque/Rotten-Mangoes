            <% for(let director of directors){%>
            <p><%=director.Name %></p>
        <% } }%>
    </ul>
    <ul>
        <%- include('../partials/listedAnimes.ejs') %>
    </ul>-->



</div>
<%- include('../partials/footer.ejs') %>
</body>

</html>