<!DOCTYPE html>
<html>

<head>
    <title>My Movie List</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&family=Sen:wght@400;700;800&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

</head>

<body>
<div class="main-content">
    <div>
        <%- include('../partials/header.ejs') %>
    </div>
    <section id="homepage-top-movies" style="margin-bottom: 15%; font-family: cursive; font-style: italic">
        <ul>
            <div style="float: left; width : 50%">
                <h2> <a class="home" href="/movielist/new" style="text-decoration-line: none; color: #EFFC20">Newly Released Movies</a> </h2>


                <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/img/anime_pic/aot.jpg" alt= "1">
                            <div class="carousel-caption d-none d-md-block">
                                        <h5 style="color: white"><%= moviesList[0].Title %></h5>
                                        <p>Plot</p>
                                    </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/img/anime_pic/geass.jpg" alt= "1">
                            <<div class="carousel-caption d-none d-md-block">
                                        <h5 style="color: white"><%= moviesList[1].Title %></h5>
                                        <p>Plot</p>
                                    </div>
                        </div>
                        <div class="carousel-item ">
                            <img src="/img/anime_pic/hms.jpg" alt= "1">
                            <div class="carousel-caption d-none d-md-block">
                                        <h5 style="color: white"><%= moviesList[2].Title %></h5>
                                        <p>Plot</p>
                                    </div>
                        </div>

                        <div class="carousel-item ">
                            <img src="/img/anime_pic/knb.jpg" alt= "1">
                            <div class="carousel-caption d-none d-md-block">
                                <h5 style="color: white"><%= moviesList[2].Title %></h5>
                                <p>Plot</p>
                            </div>
                        </div>

                    </div>
                    <a class="carousel-control-prev" href="/" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <!--<span class="sr-only">Previous</span-->>
                    </a>
                    <a class="carousel-control-next" href="/" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <!--<span class="sr-only">Next</span>-->
                    </a>
                </div>
            </div>
        </ul>


        <ul>
            <div style="float: bottom; width : 50%">
                <h2><a class="home" href="/movielist/top" style="text-decoration-line: none; color:yellow;">Top Movies</a></h2>
                <% for (let movie of recommendation){ %>
                <li>
                    <a class="listed" href=<%="/movie/" + movie.id %> >

                        <%= movie.title %>
                    </a>
                </li>
                <% } %>
            </div>
        </ul>
    </section>

    <section id="homepage-recommended-movies" style="margin-top: 50%;">
        <% if(isAuth){ %>
            <h3><a class="home" href="/movielist/recommendation"> Recommended For You </a> </h3>
            <% for (let movie of recommendation){ %>
            <li>
                <a class="listed" href=<%="/movie/" + movie.id %> >

                    <%= movie.title %>
                </a>
            </li>
            <% } %>
        <% } %>
    </section>
</div>
<%- include('../partials/footer.ejs') %>

<script src="app.js"></script>

</body>

</html>